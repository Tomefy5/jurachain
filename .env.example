# Environment Configuration
NODE_ENV=development
API_PORT=3000

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# AI Services Configuration
# Ollama (Local AI)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_TIMEOUT=30000
OLLAMA_MAX_RETRIES=3
OLLAMA_TEMPERATURE=0.3
OLLAMA_TOP_P=0.9
OLLAMA_MAX_TOKENS=4000
OLLAMA_REPEAT_PENALTY=1.1

# Gemini (Cloud AI)
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL=gemini-pro
GEMINI_TIMEOUT=30000
GEMINI_MAX_RETRIES=3
GEMINI_TEMPERATURE=0.3
GEMINI_TOP_P=0.9
GEMINI_TOP_K=40
GEMINI_MAX_TOKENS=4000

# AI Fallback Configuration
AI_FALLBACK_ENABLED=true
AI_PRIMARY_SERVICE=ollama
AI_RETRY_DELAY=1000
AI_MAX_TOTAL_RETRIES=5

# Document Generation Settings
AI_MAX_PROMPT_LENGTH=8000
AI_MIN_DOCUMENT_LENGTH=500
AI_MAX_DOCUMENT_LENGTH=50000
AI_COMPLIANCE_THRESHOLD=70

# Translation Settings
AI_TRANSLATION_ENABLED=true
AI_TRANSLATION_SERVICE=gemini

# AI Monitoring
AI_LOG_REQUESTS=false
AI_LOG_RESPONSES=false
AI_TRACK_PERFORMANCE=true
AI_ALERT_ON_FAILURE=true

# Blockchain Configuration
# Hedera Testnet (Primary)
HEDERA_ACCOUNT_ID=your_hedera_account_id
HEDERA_PRIVATE_KEY=your_hedera_private_key
HEDERA_NETWORK=testnet
HEDERA_TOPIC_ID=your_hedera_topic_id

# Polygon Testnet (Fallback)
POLYGON_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_PRIVATE_KEY=your_polygon_private_key
POLYGON_NETWORK=mumbai

# Google Services Configuration
GOOGLE_DOCS_API_KEY=your_google_docs_api_key
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback
GOOGLE_ACCESS_TOKEN=your_google_access_token
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# Collaborative Editing Configuration
COLLABORATIVE_AUTO_SAVE_DELAY=2000
COLLABORATIVE_SESSION_TIMEOUT=30
COLLABORATIVE_MAX_COLLABORATORS=10

# Monitoring Configuration
PROMETHEUS_PORT=9090
ALERTMANAGER_PORT=9093
NODE_EXPORTER_PORT=9100
BLACKBOX_EXPORTER_PORT=9115
SONARQUBE_PORT=9000
SONARQUBE_DB_PASSWORD=your_sonarqube_db_password
SONARQUBE_URL=http://localhost:9000
SONARQUBE_TOKEN=your_sonarqube_token

# Alert Configuration
SMTP_PASSWORD=your_smtp_password
ALERTMANAGER_WEBHOOK_PASSWORD=your_webhook_password

# Monitoring Thresholds
MONITORING_RESPONSE_TIME_THRESHOLD=2000
MONITORING_ERROR_RATE_THRESHOLD=0.1
MONITORING_MEMORY_THRESHOLD=1000
MONITORING_DOCUMENT_GENERATION_THRESHOLD=30000

# Database Configuration
DUCKDB_PATH=./data/analytics.db

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log